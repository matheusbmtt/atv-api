{
  "compilerOptions": {
    "target": "ES2020",                 // Versão do JS gerado
    "module": "CommonJS",               // Sistema de módulos usado pelo Node.js
    "moduleResolution": "node",        // Resolve módulos parecido com o Node
    "outDir": "dist",                  // Pasta onde o JS compilado irá
    "rootDir": "src",                   // Pasta origem dos arquivos TS
    "strict": true,                    // Ativa todas as verificações estritas
    "esModuleInterop": true,           // Facilita importações default compatíveis
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true               // Evita checagem desnecessária de libs
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
